.container
  .pricing-table
    .row
      .col-md-12
        %h1.pricing-table__header= t :"pricing_page.header"
    .content
      .pricing-table__col
        .pricing-table__option.pricing-table__option--gift
          %h2= t :"pricing_page.gift"
          %ul
            %li
              %i.fa.fa-check
              = t :"pricing_page.unlimited_members"
            %li
              %i.fa.fa-check
              = t :"pricing_page.unlimited_decisions"
          %p
            = t :"pricing_page.gift_body"
          %p.pricing-table__gift-price
            = t :"pricing_page.gift_donation_ask"
      .pricing-table__col
        .pricing-table__option.pricing-table__option--standard
          %h2= t :"pricing_page.standard"
          %ul
            %li
              %i.fa.fa-check
              = t :"pricing_page.unlimited_members"
            %li
              %i.fa.fa-check
              = t :"pricing_page.unlimited_decisions"
            %li
              %i.fa.fa-check
              = t :"pricing_page.email_support"
            %li
              %i.fa.fa-check
              = t :"pricing_page.slack_integration_html"
          %p.pricing-table__price
            = t :"pricing_page.standard_price_html"
      .pricing-table__col
        .pricing-table__option
          %h2= t :"pricing_page.plus"
          %p= t :"pricing_page.plus_body"
          %ul
            %li
              %i.fa.fa-check
              = t :"pricing_page.multiple_groups"
            %li
              %i.fa.fa-check
              = t :"pricing_page.premium_support"
            %li
              %i.fa.fa-check
              = t :"pricing_page.custom_subdomain_html"
          %p.pricing-table__price
            = t :"pricing_page.plus_price_html"
    .clearfix
    %p.pricing-table__free-trial
      = t :"pricing_page.free_trial_html"
    %p.pricing-table__get-started
      %a.pricing-table__get-started.btn.btn-success.btn-lg#pricing-page-start-link{href: start_group_path}= t :"pricing_page.get_started_for_free"
