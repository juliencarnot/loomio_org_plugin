.wrapper.pricing-table__wrapper
  %h1= t :"pricing_page.header"
  .grid.grid--medium
    .pricing-table__option.pricing-table__option--gift
      %h2= t :"pricing_page.gift"
      %p.pricing-table__price
        = t :"pricing_page.gift_price_html"
      %p.pricing-table__price--annually
        &nbsp;
      %p.pricing-table__plan-description= t :"pricing_page.gift_body"
      %p
        %em= t :"pricing_page.basic_features_include"
      %ul
        %li
          %i.fa.fa-check
          = t :"pricing_page.discussions"
        %li
          %i.fa.fa-check
          = t :"pricing_page.decisions"
        %li
          %i.fa.fa-check
          = t :"pricing_page.file_document_storage"
        %li
          %i.fa.fa-check
          = t :"pricing_page.password_free_secure_login"
    .pricing-table__option.pricing-table__option--standard
      %h2= t :"pricing_page.standard"
      %p.pricing-table__price
        = t :"pricing_page.standard_price_html"
      %p.pricing-table__price--annually
        = t :"pricing_page.annual_standard_price_html"
      %p.pricing-table__plan-description= t :"pricing_page.standard_body_html"
      %p
        %em= t :"pricing_page.standard_includes_free"
      %ul
        %li
          %i.fa.fa-check
          = t :"pricing_page.slack_integration_html"
        %li
          %i.fa.fa-check
          = t :"pricing_page.subgroups"
        %li
          %i.fa.fa-check
          = t :"pricing_page.category_tags"
        %li
          %i.fa.fa-check
          = t :"pricing_page.custom_subdomain_html"
        %li
          %i.fa.fa-check
          = t :"pricing_page.customer_support_html"
        %li
          %i.fa.fa-check
          = t :"pricing_page.data_export"
    .pricing-table__option.pricing-table__option--plus
      %h2= t :"pricing_page.plus"
      %p.pricing-table__price
        = t :"pricing_page.plus_price_html"
      %p.pricing-table__price--annually
        = t :"pricing_page.annual_plus_price_html"
      %p.pricing-table__plan-description= t :"pricing_page.pro_body_html"
      %p
        %em= t :"pricing_page.plus_includes_standard"
      %ul
        %li
          %i.fa.fa-check
          = t :"pricing_page.multiple_groups"
        %li
          %i.fa.fa-check
          = t :"pricing_page.analytics_report"
        %li
          %i.fa.fa-check
          = t :"pricing_page.premium_support"
        %li
          %i.fa.fa-check
          = t :"pricing_page.ldap_coming_soon"
  %p.pricing-table__get-started
    %a.marketing__button{href: '/start_group', class: 'btn'} Start group
  .pricing-table__contact-us
    %p= t :"pricing_page.prices_in_us_dollars"
    %p= t :"pricing_page.free_is_for_community_and_evaluation_html"
    %p= t :"pricing_page.need_something_else_html"
