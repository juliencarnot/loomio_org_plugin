%main.marketing__content
  .wrapper-large.marketing__hero-wrapper
    %section.marketing__section.grid.grid--medium
      %div.can-shrink
        %h2= t :'marketing.hero.dilemma_html'
      %div.can-shrink
        = image_tag('marketing/loomio-old-way.png', class: 'img-can-shrink')
    %section.marketing__section--margin.grid.grid--medium
      .marketing__hero-solution-text
        %h2= t :'marketing.hero.solution'
        .marketing__hero-button
          %a.marketing__button{href: '/start_group', class: 'btn'}= t :'marketing.start_group'
      .marketing__hero-solution-image
        = image_tag('marketing/loomio-new-way.png', class: 'img-can-shrink')
    %section.marketing__section--margin.marketing__hero-button--small-device.ta-center
      %a.marketing__button{href: '/start_group', class: 'btn'}= t :'marketing.start_group'
    %section.marketing__section--margin.marketing__loomio-on-devices
      = image_tag('marketing/loomio-macbook-and-samsung.png', class: 'img-can-shrink')
    %section.marketing__section--margin.grid
      .ta-center
        %h2= t :'marketing.make_decisions_html'
  .wrapper.marketing__loomio-process
    %section.marketing__section--margin.grid.grid--medium
      .marketing__loomio-process-text
        %h3= t :'marketing.gather.heading'
        %p= t :'marketing.gather.explanation'
      .marketing__loomio-process-image
        = image_tag('marketing/gather.png', class: 'img-can-shrink')
    %section.marketing__section--margin.grid.grid--medium
      .marketing__loomio-process-text
        %h3= t :'marketing.discuss.heading'
        %p= t :'marketing.discuss.explanation'
      .marketing__loomio-process-image
        = image_tag('marketing/discuss.png', class: 'img-can-shrink')
    %section.marketing__section--margin.grid.grid--medium
      .marketing__loomio-process-text
        %h3= t :'marketing.propose.heading'
        %p= t :'marketing.propose.explanation'
      .marketing__loomio-process-image
        = image_tag('marketing/propose.png', class: 'img-can-shrink')
    %section.marketing__section--margin.grid.grid--medium
      .marketing__loomio-process-text
        %h3= t :'marketing.decide_act.heading'
        %p= t :'marketing.decide_act.explanation'
      .marketing__loomio-process-image
        = image_tag('marketing/act.png', class: 'img-can-shrink')
    %section.marketing__section--margin.ta-center
      %div
        %h2= t :'marketing.try_it'
        %a.marketing__button{href: '/start_group', class: 'btn'}= t :'marketing.start_group'
    %hr.marketing__rule
    %section.marketing__section--margin
      %h3.ta-center
        = t :'marketing.fast_inclusive_effective'
      .marketing__case-study.grid.grid--medium
        .marketing__case-study-image.column--light
          = image_tag('marketing/vica-rogers.png')
        .column--heavy
          %h4= t :'marketing.debt_resistance_uk.heading'
          %i.marketing__case-study-quote= t :'marketing.debt_resistance_uk.quote'
          %p &mdash; Vica Rogers
          %p
            %a{href: 'http://blog.loomio.org/2016/03/07/druk/', target: '_blank'}= t :'marketing.debt_resistance_uk.link_text'
      .marketing__case-study.grid.grid--medium
        .marketing__case-study-image.column--light
          = image_tag('marketing/jacqui-graham.png', class: 'img-can-shrink')
        .column--heavy
          %h4= t :'marketing.pathways.heading'
          %i.marketing__case-study-quote= t :'marketing.pathways.quote'
          %p &mdash; Jacqui Graham
          %p
            %a{href: 'http://blog.loomio.org/2014/04/07/jacqui-graham-meaningful-engagement-in-a-large-organisation/', target: '_blank'}= t :'marketing.pathways.link_text'
      .marketing__case-study.grid.grid--medium
        .marketing__case-study-image.column--light
          = image_tag('marketing/kevin-davies.png', class: 'img-can-shrink')
        .column--heavy
          %h4= t :'marketing.welsh_government.heading'
          %i.marketing__case-study-quote= t :'marketing.welsh_government.quote'
          %p &mdash; Kevin Davies
          %p
            %a{href: 'http://blog.loomio.org/2016/05/16/national_assembly_wales/', target: '_blank'}= t :'marketing.welsh_government.link_text'
      .marketing__case-study.grid.grid--medium
        .marketing__case-study-image.column--light
          = image_tag('marketing/francesca-pick.png', class: 'img-can-shrink')
        .column--heavy
          %h4= t :'marketing.ouishare.heading'
          %i.marketing__case-study-quote= t :'marketing.ouishare.quote'
          %p &mdash; Francesca Pick
          %p
            %a{href: 'http://blog.loomio.org/2016/01/21/ouishare/', target: '_blank'}= t :'marketing.ouishare.link_text'
      .marketing__case-study.grid.grid--medium
        .marketing__case-study-image.column--light
          = image_tag('marketing/tony-carne.png', class: 'img-can-shrink')
        .column--heavy
          %h4= t :'marketing.urban_adventures.heading'
          %i.marketing__case-study-quote= t :'marketing.urban_adventures.quote'
          %p &mdash; Tony Carne
          %p
            %a{href: 'http://blog.loomio.org/2014/02/28/organising-adventure-across-six-continents/', target: '_blank'}= t :'marketing.urban_adventures.link_text'
      %hr.marketing__rule
      %section.marketing__section--margin.ta-center
        %h3= t :'marketing.features.heading'
        .marketing__features.grid.grid--medium
          .marketing__feature
            %h4.marketing__feature-heading= t :'marketing.features.choose_participants_heading'
            %p= t :'marketing.features.choose_participants_explanation'
          .marketing__feature
            %h4.marketing__feature-heading= t :'marketing.features.deliberation_heading'
            %p= t :'marketing.features.deliberation_explanation'
          .marketing__feature
            %h4.marketing__feature-heading= t :'marketing.features.iterate_heading'
            %p= t :'marketing.features.iterate_explanation'
        .marketing__features.grid.grid--medium
          .marketing__feature
            %h4.marketing__feature-heading= t :'marketing.features.deadlines_heading'
            %p= t :'marketing.features.deadlines_explanation'
          .marketing__feature
            %h4.marketing__feature-heading= t :'marketing.features.fewer_meetings_heading'
            %p= t :'marketing.features.fewer_meetings_explanation'
          .marketing__feature
            %h4.marketing__feature-heading= t :'marketing.features.notifications_heading'
            %p= t :'marketing.features.notifications_explanation'
        .marketing__features.grid.grid--medium
          .marketing__feature
            %h4.marketing__feature-heading= t :'marketing.features.archive_heading'
            %p= t :'marketing.features.archive_explanation'
          .marketing__feature
            %h4.marketing__feature-heading= t :'marketing.features.email_or_mobile_heading'
            %p= t :'marketing.features.email_or_mobile_explanation'
          .marketing__feature
            %h4.marketing__feature-heading= t :'marketing.features.accessible_heading'
            %p= t :'marketing.features.accessible_explanation'
      %hr.marketing__rule
      %section.marketing__section--margin.ta-center
        .marketing__press.grid.grid--medium
          %a.marketing__press-testimonial{href: 'http://www.fastcoexist.com/3029132/fund-this/an-occupy-inspired-app-that-helps-groups-make-actual-group-decisions', target: '_blank'}
            .marketing__press-logo
              = image_tag('marketing/fast-company-logo.png')
            %i.marketing__press-quote= t :'marketing.press.fast_company'
            %p.marketing__press-author &mdash; Jay Cassano, Fast Company
          %a.marketing__press-testimonial{href: 'http://boingboing.net/2014/03/19/loomio-democratic-decision-ma.html', target: '_blank'}
            .marketing__press-logo
              = image_tag('marketing/boing-boing-logo.png')
            %i.marketing__press-quote= t :'marketing.press.boingboing'
            %p.marketing__press-author &mdash; Cory Doctorow, Boing Boing
          %a.marketing__press-testimonial{href: 'http://www.bbc.co.uk/programmes/b04md5b0', target: '_blank'}
            .marketing__press-logo
              = image_tag('marketing/bbc-logo.png')
            %i.marketing__press-quote= t :'marketing.press.bbc'
            %p.marketing__press-author &mdash; Jon Alexander, BBC Radio 4
      %hr.marketing__rule
      %section.marketing__section--margin
        %h3.ta-center= t :'marketing.about_us.heading'
        .marketing__about-us.grid.grid--medium
          %div
            %p
              = t :'marketing.about_us.first_paragraph'
              %span
                %a{href: 'http://www.enspiral.com/', target: '_blank'} Enspiral Network.
            %p= t :'marketing.about_us.second_paragraph'
            %p
              %a{href: '/about'}= t :'marketing.about_us.link_text'
          %div
            = image_tag('marketing/team-april-16.png', class: 'img-can-shrink')
      %hr.marketing__rule
      %section.marketing__section--margin.ta-center
        %div
          %h3= t :'marketing.try_it'
          %a.marketing__button{href: '/start_group', class: 'btn'}= t :'marketing.start_group'
